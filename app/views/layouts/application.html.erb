<!DOCTYPE html>
<html>
  <head>
    <title>TodoManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <main class="AppMain">
      <% if @current_user %>
        <div class="AppMain-header">
          <p class="AppMain-title"> Welcome <%= @current_user.first_name %>! </p>
          <%= link_to "Sign-out", destroy_session_path, method: "delete", class: "AppMain-signout" %>
        </div>
        <hr class="BreakLine">
      <% end %>
      <%= yield %>
    </main>
  </html>
