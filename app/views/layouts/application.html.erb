<!DOCTYPE html>
<html>
  <head>
    <title>TodoManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if @current_user %>
      <div class="AppHeader">
        <p class="AppHeader-title"> Welcome <%= @current_user.first_name %>! </p>
        <%= button_to "Sign-out", destroy_session_path, method: :delete, class: "AppHeader-signout" %>
      </div>
      <hr class="BreakLine">
    <% end %>
    <%= yield %>
  </html>
